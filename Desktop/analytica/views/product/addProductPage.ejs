<div class="container mt-2">
    <li class="list-group-item list-group-item-light fw-bold text-success text-capitalize">add product page
        <span class="mx-3"> Date : <script> document.write(new Date().toLocaleDateString('en-GB')); </script></span>
    </li>  
</div>

<div class="container-fluid mt-2">
    <form>
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-6 col-lg-6 col-xl-6">
                    <div class="mb-3">
                        <label for="itemName" class="form-label fw-bold">Item Name</label>
                        <input type="text" required class="form-control" name="itemName" id="itemName" aria-describedby="productHelp">
                        <div id="productHelp" class="form-text">Try to spell the name correctly</div>
                    </div>
                </div>
                <div class="col-6 col-md-3 col-lg-3 col-xl-3">
                    <div class="mb-3">
                        <label for="itemPurity" class="form-label fw-bold">Item Purity</label>
                        <input type="number" required  step="any" class="form-control" name="itemPurity" id="itemPurity" aria-describedby="purityHelp">
                        <div id="purityHelp" class="form-text">purity in %</div>
                    </div>
                </div>
                <div class="col-6 col-md-3 col-lg-3 col-xl-3">
                    <div class="mb-3">
                        <label for="itemPurity" class="form-label fw-bold">Wastage</label>
                        <input type="number" required  step="any" class="form-control" name="wastage" id="wastage" aria-describedby="wastageHelp">
                        <div id="wastageHelp" class="form-text">
                            W = pur. purity - purity
                            <div>
                                Purchase Purity: 
                            </div>

                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div>
                        <div class="form-check form-check-inline form-switch">
                            <input class="form-check-input" type="radio" role="switch" name="InStock" value="true" id="flexSwitchCheckDefault">
                            <label class="form-check-label" for="flexSwitchCheckDefault">Labour in per/Kg</label>
                        </div>
                        <div class="form-check form-check-inline form-switch">
                            <input class="form-check-input" type="radio" role="switch" name="InStock" value="false" id="flexSwitchCheckChecked">
                            <label class="form-check-label" for="flexSwitchCheckChecked">Labour in Per/Piece</label>
                        </div>
                          
                    </div>

                </div>
                <div class="col-6 col-md-3 col-lg-3 col-xl-3">
                    <div class="mb-3">
                        <label for="itemPurity" class="form-label fw-bold">Pur. Labr</label>
                        <input type="number"  step="any" class="form-control" name="purchaseLabour" id="itemPurity" aria-describedby="purityHelp">
                        <div id="purityHelp" class="form-text">labour in Rupees</div>
                    </div>
                </div>

                <div class="col-6 col-md-3 col-lg-3 col-xl-3">
                    <div class="mb-3">
                        <label for="itemPurity" class="form-label fw-bold">Sale Labr</label>
                        <input type="number"  step="any" class="form-control" name="saleLabour" id="itemPurity" aria-describedby="purityHelp">
                        <div id="purityHelp" class="form-text">labour in Rupees</div>
                    </div>
                </div>
                
                <div class="mt-3 border border-secondary p-2">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="radio" role="switch" name="InStock" value="true" id="flexSwitchCheckDefault">
                        <label class="form-check-label" for="flexSwitchCheckDefault">Swip For In Stock Product</label>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="radio" role="switch" name="InStock" value="false" id="flexSwitchCheckChecked">
                        <label class="form-check-label" for="flexSwitchCheckChecked">Swip For Instant Delivery order Product</label>
                    </div>
                      
                </div>
                <div class="m-4">
                    <a class="btn btn-sm btn-primary" href="">Add Product</a>
                    <button class="btn btn-sm btn-light mx-3" type="reset">Reset</button>
                </div>
        

            </div>
        </div>
    </form>
</div>