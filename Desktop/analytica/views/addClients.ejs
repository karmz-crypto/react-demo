

<!--
    clients attributes 
        1. name
        2. gst
        3. date of creation
        3 . type of client : manufact/retailwhole
        4. address  -> type : object
        5. purchase transact -> type : objectId
        6. sale transaction -> type : objectId
        7. payment transact -> type : objectId
        8. silver balance
        9. labour cash
        10. payment status : pending, advance or none.
        11. transaction date wen payment status is 0 / none -> type : object, zeroPaymentStatusObject : date 
        
        payment status -ve : advance / +ve pending / 0 none 

        

