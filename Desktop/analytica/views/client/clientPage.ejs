<div class="container mt-2 p-2">
    <li class="list-group-item list-group-item-light fw-bold text-capitalize"><%=webPageDataObject.nameOfClient%></li>
</div>
<div class="container m-3">
  <button class="btn btn-sm btn-warning" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    View Profile
  </button>
</div>
<div class="container mt-2">
  <div class="collapse" id="collapseExample">
    <div class="card card-body">
      <table class="table table-striped caption-top text-capitalize">
        <caption>Client Profile</caption>
        <thead>
          <tr>
            <th scope="row">Name Of Client</th>
            <td><%=webPageDataObject.nameOfClient%></td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">GSTIN</th>
            <td><%=webPageDataObject.gstNum%></td>
          </tr>
          <tr>
              <th scope="row">Client Type</th>
              <td><%=webPageDataObject.clientType%></td>
          </tr>
          <tr>
            <th scope="row">City</th>
            <td><%=webPageDataObject.city%></td>
          </tr>
          <tr>
            <th scope="row">Tele-Num</th>
            <td><%=webPageDataObject.teleNum%></td> 
          </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>

